		<div class="card sticky-action">
		    <div class="card-image ">
		  	    <%= image_tag @book.book_img.url(:book_show), class: "book-show activator" %>
		    </div>
		    <div class="card-content">
		      	<p class="card-action"><a href="#" class="right"><%= link_to "Download", @book.book_img.url(:original, false) %></a></p>
		    </div>
	  	</div>





		<div class="links btn-group center-align">
			<% if user_signed_in? %>
				<% if @book.user_id == current_user.id %>
					<%= link_to "Edit", edit_book_path(@book), class: "btn btn-custom" %>
					<%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
